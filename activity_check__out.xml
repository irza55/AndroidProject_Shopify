<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Check_Out">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:scaleType="fitCenter"
        android:src="@drawable/delivery" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ProductsQuantity"
        android:textSize="20dp"
        android:text="Quantity: 2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TotalAm"
        android:textSize="20dp"
        android:text="Total Ammount: 20000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Email"
        android:textSize="20dp"
        android:text="Naqqash@outlook.com"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:gravity="center"

        android:textSize="20dp" />
    <EditText
        android:id="@+id/PhoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Mobile No"
        android:inputType="phone"
        android:gravity="center"

        android:textSize="20dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Select Payment Method"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:clickable="false"
            android:layout_marginLeft="15dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="PayPal" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:checked="true"
            android:textSize="18dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Cash on Delivery" />
    </RadioGroup>

    <Button
        android:id="@+id/submit"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounde_button"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:textSize="20dp"
        android:text="Submit"
        />
</LinearLayout>